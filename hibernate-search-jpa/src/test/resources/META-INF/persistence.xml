<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="Hibernate" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>com.github.hotware.lucene.extension.hsearch.jpa.test.entities.Sorcerer</class>
		<class>com.github.hotware.lucene.extension.hsearch.jpa.test.entities.Place</class>
		<class>com.github.hotware.lucene.extension.hsearch.jpa.test.entities.AdditionalPlace</class>
		<class>com.github.hotware.lucene.extension.hsearch.jpa.test.entities.AdditionalPlace2</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:testdb" />
			<property name="javax.persistence.jdbc.user" value="sa" />
			<property name="javax.persistence.jdbc.password" value="" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="create" />
		</properties>
	</persistence-unit>

	<persistence-unit name="EclipseLink" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>com.github.hotware.lucene.extension.hsearch.jpa.test.entities.Sorcerer</class>
		<class>com.github.hotware.lucene.extension.hsearch.jpa.test.entities.Place</class>
		<class>com.github.hotware.lucene.extension.hsearch.jpa.test.entities.AdditionalPlace</class>
		<class>com.github.hotware.lucene.extension.hsearch.jpa.test.entities.AdditionalPlace2</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:testdb" />
			<property name="javax.persistence.jdbc.user" value="sa" />
			<property name="javax.persistence.jdbc.password" value="" />
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
			<property name="eclipselink.ddl-generation.output-mode"
				value="both" />
		</properties>
	</persistence-unit>

</persistence>